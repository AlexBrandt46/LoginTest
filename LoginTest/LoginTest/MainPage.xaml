<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginTest.MainPage">
    <Frame BackgroundColor="#0D2240">
        <StackLayout BackgroundColor="#0D2240" VerticalOptions="CenterAndExpand">
            <Image Source="app_top_logo" WidthRequest="240" Aspect="AspectFit" HorizontalOptions="Center" Margin="0,-90,0,90"></Image>
            <Frame CornerRadius="10" BackgroundColor="White" Padding="5" Margin="10,10,10,0">
                <Editor Margin="20,0,20,0" Placeholder="Username" TextColor="Black" PlaceholderColor="DarkGray" x:Name="lblUsername" AutoSize="TextChanges"/>
            </Frame>
            <Frame CornerRadius="10" BackgroundColor="White" Padding="5" Margin="10,10, 10,0">
                <Editor Margin="20,0,20,0" Placeholder="Password" TextColor="Black" PlaceholderColor="DarkGray" x:Name="lblPassword" AutoSize="TextChanges"/>
            </Frame>
            <Frame CornerRadius="10" BackgroundColor="White" Padding="-10,5" Margin="70,70,70,0">
                <Button Margin="30,0,30,0" Text="Login"/>
            </Frame>
        </StackLayout>
    </Frame>
</ContentPage>
